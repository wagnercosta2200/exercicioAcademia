@model List<ContatoModel>

@{
    ViewData["Title"] = "Listagem de Contato";
}

<div class = "text-center">

    <!--Criar a btn pra incluir novo contato-->
    <div class="d-grid gop-2 d-md-flex justify-content-lg-start">
         <a  class="btn btn-primary" role = "button" asp-controller="Contatos"asp-action="Create" >Adcionar Novo Contato </a>
    </div>
    <br />


    <h1 class ="display -4">Listagem de Contatos</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">E-mail</th>
      <th scope="col">Celular</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
   
            @if(Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                     <tr>
      <th scope="row">@contato.Id</th>
      <td>@contato.Nome</td>
      <td>@contato.Email</td>
      <td>@contato.Celular</td>
      <td>          <!--Inclusão dos btn Editar e Apagar-->
          <div class="btn-group" role="group" >
             <a  role = "button" class="btn btn-primary"asp-route-itemid="@contato.Id" asp-controller="Contatos" asp-action="Edit" >Editar </a>
             <a  role = "button" class="btn btn-danger" asp-route-itemid="@contato.Id" asp-controller="Contatos" asp-action="Delete">Apagar </a> 
        </div>
      </td>
    </tr>
                }
            }

   
  </tbody>
</table>
</div>

